<script>

  /*Codigo das perguntas*/

  const formPergunta1 = document.getElementById('form-pergunta-1');
  const resultadoPergunta1 = document.getElementById('resultado-pergunta-1');

  formPergunta1.addEventListener('submit', function(event) {
    event.preventDefault();

    let resposta = '';

    if (formPergunta1.pergunta1.checked) {
      resposta += 'Você gosta de pizza. ';
    } else {
      resposta += 'Você não gosta de pizza. ';
    }

    resultadoPergunta1.textContent = resposta;
  });


  const formPergunta2 = document.getElementById('form-pergunta-2');
  const resultadoPergunta2 = document.getElementById('resultado-pergunta-2');

  formPergunta2.addEventListener('submit', function(event) {
    event.preventDefault();

    let resposta = '';

    if (formPergunta2.pergunta2.checked) {
      resposta += 'Você gosta de sorvete. ';
    } else {
      resposta += 'Você não gosta de sorvete. ';
    }

    resultadoPergunta2.textContent = resposta;
  });


  /*Codigo do slide*/

        var slideIndex = 1;
    showSlides(slideIndex);

    function plusSlides(n) {
      showSlides(slideIndex += n);
    }

    function currentSlide(n) {
      showSlides(slideIndex = n);
    }

    function showSlides(n) {
      var i;
      var slides = document.getElementsByClassName("mySlides");
      if (n > slides.length) {slideIndex = 1}    
      if (n < 1) {slideIndex = slides.length}
      for (i = 0; i < slides.length; i++) {
          slides[i].style.display = "none";  
      }
      slides[slideIndex-1].style.display = "block";  
    }
    </script>

